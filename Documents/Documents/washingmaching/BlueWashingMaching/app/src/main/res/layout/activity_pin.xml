<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.sumec.wash.activity.PinActivity">

    <com.example.sumec.wash.view.ToolBarView
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.sumec.wash.view.ToolBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="原PIN码："
            android:textColor="@color/grey_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_pwd1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:digits="1234567890"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="新PIN码："
            android:textColor="@color/grey_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_pwd2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:digits="1234567890"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="确认新PIN码："
            android:textColor="@color/grey_dark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/ed_pwd3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:digits="1234567890"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:lines="1"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="提示：PIN码必须是4位数字(不能含有字母)"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="忘记原PIN码？"
        android:textColor="@color/blue1"
        android:background="@drawable/btn_selector"
        android:textSize="14sp" />

</LinearLayout>
