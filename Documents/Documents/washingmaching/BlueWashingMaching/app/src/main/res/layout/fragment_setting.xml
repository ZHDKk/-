<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/stallSet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/btn_selector"
        android:clickable="true">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/stall_set"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="档位"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/grey_dark"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:background="@drawable/next"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_marginLeft="50dp"
        />
    <LinearLayout
        android:background="@drawable/btn_selector"
        android:id="@+id/pinSet"
        android:layout_width="match_parent"
        android:clickable="true"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/pin_set"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="PIN码"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:textColor="@color/grey_dark"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:background="@drawable/next"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_marginLeft="50dp"
        />
    <LinearLayout
        android:background="@drawable/btn_selector"
        android:id="@+id/weatherSet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/weather_set"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="天气"
            android:textSize="16sp"
            android:textColor="@color/grey_dark"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:background="@drawable/next"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_marginLeft="50dp"
        />
    <LinearLayout
        android:background="@drawable/btn_selector"
        android:id="@+id/reviewSet"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/review_set"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="恢复出厂设置"
            android:textSize="16sp"
            android:textColor="@color/grey_dark"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="10dp"
            android:background="@drawable/next"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/list_line"
        android:layout_marginLeft="50dp"
        />

</LinearLayout>
