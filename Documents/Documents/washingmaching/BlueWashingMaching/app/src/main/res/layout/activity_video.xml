<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sumec.wash.activity.VideoActivity">
    <RelativeLayout
        android:id="@+id/rl_video_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/null_color"
        android:visibility="visible"
        >

        <VideoView
            android:id="@+id/id_videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/null_color" />

        <ImageView
            android:id="@+id/video_thumbnail_xcd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/null_color"
            android:visibility="gone"
            android:scaleType="centerCrop"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/null_color">

            <com.example.sumec.wash.video.VideoController
                android:id="@+id/id_video_controller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/null_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#000000" />

    </RelativeLayout>

</RelativeLayout>
